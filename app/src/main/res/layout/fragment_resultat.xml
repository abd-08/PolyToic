<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_background"
    tools:context=".ResultatFragment">


    <ImageView
        android:id="@+id/fermer_resultat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_close_clear_cancel" />


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/fermer_resultat">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/recompense_text"
        android:layout_marginTop="@dimen/pading_resultat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FELICITATION"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:padding="@dimen/pading_resultat"
        android:layout_marginTop="@dimen/pading_resultat"
        android:id="@+id/str_total_score"
        android:background="@color/white_background"
        android:layout_gravity="center_horizontal"
        android:text="Total score"/>


    <TextView
        android:id="@+id/resultat_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pading_resultat"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/holo_red_dark"
        android:text="10/10"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_background"
        android:textAlignment="center"
        android:padding="@dimen/pading_resultat"
        android:layout_marginTop="@dimen/pading_resultat"
        android:id="@+id/str_listening_score"
        android:layout_gravity="center_horizontal"
        android:text="Listening"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultat_listening"
        android:layout_marginTop="@dimen/pading_resultat"
        android:layout_gravity="center_horizontal"
        android:text="40/100"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_background"
        android:textAlignment="center"
        android:padding="@dimen/pading_resultat"
        android:id="@+id/str_reading_score"
        android:layout_marginTop="@dimen/pading_resultat"
        android:layout_gravity="center_horizontal"
        android:text="Reading"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/resultat_reading"
        android:layout_marginTop="@dimen/pading_resultat"
        android:layout_marginBottom="@dimen/pading_resultat"
        android:text="40/100"/>



    <ImageView
        android:id="@+id/recommencer_resultat"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:layout_marginTop="@dimen/pading_resultat"
        android:text="Afficher la correction"
        android:src="@drawable/restart_icon" />
</LinearLayout>

</ScrollView>

</RelativeLayout>