<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/info_donne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nom"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="15dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="last change"
            tools:layout_editor_absoluteX="83dp"
            android:layout_marginLeft="10dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="etat"
            android:layout_marginLeft="10dp"
            tools:layout_editor_absoluteX="181dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="score"
            android:layout_marginLeft="10dp"
            tools:layout_editor_absoluteX="236dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mode"
            android:layout_marginLeft="10dp"
            tools:layout_editor_absoluteX="288dp"
            tools:layout_editor_absoluteY="16dp" />

        <ImageView
            android:id="@+id/tri_filtre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_filter_list_black_24dp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/info_donne_variable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_donne"></ListView>


</RelativeLayout>