<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity=""
    android:orientation="vertical">

    <TextView
        android:id="@+id/popup_modifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_margin="80dp"
        android:text="Modification de la matrice "
        android:textSize="30dp"/>

    <EditText
        android:id="@+id/popup_nom_matrice_modifier"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:layout_marginLeft="30dp"
        android:text="nom"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/popup_ligne_modifier"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:layout_marginLeft="30dp"
            android:text="10"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:text="*"/>


        <EditText
            android:id="@+id/popup_colonne_modifier"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:text="2"
            android:layout_marginLeft="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity=""
        android:layout_margin="40dp">



        <Button
            android:id="@+id/popup_btn_annuler_modifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="annuler"
            />

        <Button
            android:id="@+id/popup_btn_valider_modifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="valider"
            />
    </LinearLayout>

</LinearLayout>