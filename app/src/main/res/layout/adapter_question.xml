<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/question_numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textSize="20dp"
        android:layout_marginLeft="16dp"
        android:text="1" />


    <LinearLayout
        android:id="@+id/bloc_4_choix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="10dp">

        <RelativeLayout
            android:id="@+id/reponse_AA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/reponse_A"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/cercle"
                app:srcCompat="@drawable/cercle" />
            <TextView
                android:id="@+id/lettreA"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:text="A"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/reponse_BB"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/reponse_B"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/cercle"
                app:srcCompat="@drawable/cercle" />
            <TextView
                android:id="@+id/lettreB"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:text="B"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/reponse_CC"
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/reponse_C"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/cercle"
                app:srcCompat="@drawable/cercle" />
            <TextView
                android:id="@+id/lettreC"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:text="C"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/reponse_DD"
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/reponse_D"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/cercle"
                app:srcCompat="@drawable/cercle" />
            <TextView
                android:id="@+id/lettreD"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:text="D"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/couleur_question"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/bloc_4_choix" />






</RelativeLayout>